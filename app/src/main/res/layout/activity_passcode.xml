<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".PasscodeActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="-5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="25dp"
                    android:text="Create a 4-digit PIN for your app"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="14.5sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="25dp"
                    android:text="Please confirm your PIN"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="14.5sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="25dp"
                    android:text="Please enter your PIN"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textSize="14.5sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/editTextNumberPassword1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/editTextNumberPassword2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextNumberPassword3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="39dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editTextNumberPassword4"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="6dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/editTextNumberConfirm1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberConfirm2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberConfirm3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="39dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberConfirm4"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="6dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:imeOptions="actionNext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberPin1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberPin2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberPin3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="39dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/editTextNumberPin4"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="6dp"
                    android:ems="10"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="114dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="36dp"
                    android:text="Continue"
                    android:textColor="#CFD8DC"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_continue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="114dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="36dp"
                    android:text="Continue"
                    android:textColor="#CFD8DC"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/button_continue3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="114dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="36dp"
                    android:text="Continue"
                    android:textColor="#CFD8DC"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="invisible"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.wear.widget.BoxInsetLayout>

